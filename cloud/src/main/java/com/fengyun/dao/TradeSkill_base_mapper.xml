<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--@author yangjun -->
<mapper namespace="com.fengyun.dao.ITradeSkillDao">
<select id="getTradeSkillsBySoftwareIds" resultType="com.fengyun.entity.TradeSkill">
    select  distinct y.id, y.content from y_trade_skill y left join y_software_trade_skill t on y.id=t.trade_skill_id
     <where>t.software_id in  <foreach collection="ids" open="(" separator="," close=")" item="id">#{id}</foreach></where> order by y.id asc
</select>
    <select id="getAllTradeSkills" resultType="com.fengyun.entity.TradeSkillVo">
    select 
		<include refid="columns"/>
		from y_trade_skill <where>
		 type_id=#{type_id} 
		</where> order by id asc
    </select>
    <select id="getTradeSkillsBySoftwareId" resultType="com.fengyun.entity.TradeSkillVo">
       select  y.id, y.content from y_trade_skill y left join y_software_trade_skill t on y.id=t.trade_skill_id
     <where>t.software_id=#{software_id}</where> order by y.id asc
    </select>
    
	<sql id="columns">
		id, content
	</sql>
	<sql id="vals">
		#{id}, #{content}
	</sql>
	<sql id="conds">
		<if test="id != null and id != ''">
			and id = #{id}
		</if>
		<if test="content != null and content != ''">
			and content = #{content}
		</if>
	</sql>

	<insert id="saveTradeSkill" parameterType="com.fengyun.entity.TradeSkill" useGeneratedKeys="true" keyProperty="id">
		<selectKey keyProperty="id" resultType="Long" order="AFTER">
			select last_insert_id()
		</selectKey>
		insert into y_trade_skill (<include refid="columns" />) 
		values (<include refid="vals" />)
	</insert>
	
	<insert id="saveTradeSkillVo" parameterType="com.fengyun.entity.TradeSkillVo" useGeneratedKeys="true" keyProperty="id">
		<selectKey keyProperty="id" resultType="Long" order="AFTER">
			select last_insert_id()
		</selectKey>
		insert into y_trade_skill (<include refid="columns" />) 
		values (<include refid="vals" />)
	</insert>

	<delete id="deleteTradeSkill">
		delete from y_trade_skill
		where id=#{id} 
	</delete>
	
	<delete id="deleteTradeSkillVo">
		delete from y_trade_skill
		where id=#{id} 
	</delete>

	<delete id="deleteByExampleTradeSkill">
		delete from y_trade_skill
		where 1=1
		<include refid="conds" />
	</delete>
	
	<delete id="deleteByExampleTradeSkillVo">
		delete from y_trade_skill
		where 1=1
		<include refid="conds" />
	</delete>
	
	<select id="loadTradeSkill" resultType="com.fengyun.entity.TradeSkillVo">
		select 
		<include refid="columns"/>
		from y_trade_skill
		where id=#{id} 
	</select>
	
	<select id="selectTradeSkill" resultType="com.fengyun.entity.TradeSkillVo">
		select 
		<include refid="columns"/>
		from y_trade_skill
		where 1=1
		<include refid="conds" />
	</select>

	<update id="updateTradeSkill">
		update y_trade_skill
		<set>
			id=#{id}, 
			content=#{content}
		</set>
		where id=#{id} 
	</update>
	
	<update id="updateTradeSkillVo">
		update y_trade_skill
		<set>
			id=#{id}, 
			content=#{content}
		</set>
		where id=#{id} 
	</update>
	

	<update id="updateIgnoreNullTradeSkill">
		update y_trade_skill
		<set>
		<if test="id != null and id != ''">
			id=#{id}, 
		</if>
		<if test="content != null and content != ''">
			content=#{content}
		</if>
		</set>
		where id=#{id} 
	</update>
	
	<update id="updateIgnoreNullTradeSkillVo">
		update y_trade_skill
		<set>
		<if test="id != null and id != ''">
			id=#{id}, 
		</if>
		<if test="content != null and content != ''">
			content=#{content}
		</if>
		</set>
		where id=#{id} 
	</update>

	<update id="updateByExampleTradeSkill">
		update y_trade_skill
		<set>
			<if test="id != null and id != ''">
			id=#{id}, 
			</if>
			<if test="content != null and content != ''">
			content=#{content}
			</if>
		</set>
		where 1=1
		<include refid="conds" />
	</update>
	
	<update id="updateByExampleTradeSkillVo">
		update y_trade_skill
		<set>
			<if test="id != null and id != ''">
			id=#{id}, 
			</if>
			<if test="content != null and content != ''">
			content=#{content}
			</if>
		</set>
		where 1=1
		<include refid="conds" />
	</update>

</mapper>