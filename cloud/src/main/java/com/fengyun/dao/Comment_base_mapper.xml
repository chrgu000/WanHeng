		</if>
		<if test="star_level != null and star_level != ''">
			star_level=#{star_level}, 
		</if>
		<if test="learn_degree != null and learn_degree != ''">
			learn_degree=#{learn_degree}
		</if>
		</set>
		where id=#{id} 
	</update>
	
