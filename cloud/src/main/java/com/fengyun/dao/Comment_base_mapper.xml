		</if>
		<if test="learn_degree != null and learn_degree != ''">
			learn_degree=#{learn_degree}
		</if>
		</set>
		where id=#{id} 
	</update>

	<update id="updateByExampleComment">
		update y_comment
		<set>
			<if test="id != null and id != ''">
