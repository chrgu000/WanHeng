<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.to.dao.PayWayDao">
	<resultMap id="payWayMap" type="PayWay">
		<result property="createTime" column="create_time" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"></result>
		<result property="modifiedTime" column="modified_time" javaType="java.sql.Timestamp" jdbcType="TIMESTAMP"></result>
	</resultMap>
	<insert id="save">
		insert into
		to_pay_way(content,create_time,modified_time,num,delflag,number) 	values(#{content},#{createTime},#{modifiedTime},#{num},#{delflag},#{number})
	</insert>
	<update id="update">
		update to_pay_way
		<set>
			<if test="content!=null and content!=''">
				content=#{content},
</if>
			<if test="modifiedTime!=null and modifiedTime!=''">
				modified_time=#{modifiedTime},
			</if>
			<if test="num!=null and num!=''">
				num=#{num},
			</if>
			<if test="number!=null and number!=''">
				number=#{number},
			</if>
			<if test="delflag!=null and delflag!=''">
			delflag=#{delflag},
		</if>
		</set>
		where id=#{id}
	</update>
	<delete id="deleteByIds">
		update   to_pay_way set delflag=1  where id in
		<foreach collection="ids" open="(" close=")" separator=","
			item="id">#{id}</foreach>
	</delete>

	<select id="getById" resultMap="payWayMap">
		select * from to_pay_way
		where
		id=#{id}
	</select>
	<select id="getAllByPage" resultMap="payWayMap">
		select * from to_pay_way where delflag=2
		order by id desc limit #{begin},#{pageSize}
	</select>
	<select id="getRows" resultType="int">
		select count(*) from to_pay_way  where delflag=2
	</select>

	<select id="getAllPayWay" resultType="PayWay">
	 select * from to_pay_way where delflag=2 order by num ASC
	</select>
</mapper>