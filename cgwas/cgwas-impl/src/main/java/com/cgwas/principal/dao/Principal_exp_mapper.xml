<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- @author yangjun-->
<mapper namespace="com.cgwas.principal.dao">
	<sql id="columnsAs">
		t1.id, t1.principal_name, t1.user_id, t1.head_pic_path
	</sql>

	<select id="selectPrincipalPage" resultType="com.cgwas.principal.entity.PrincipalVo">
		select
		<include refid="columnsAs"/>
		from
		p_principal t1
		join
		(SELECT
		id
		from
		p_principal
		where 1=1
		
		<include refid="conds" />
		order by id desc
		limit #{firstrownum}, #{limit}) t2
		where t1.id = t2.id
	</select>
	
	<select id="selectPrincipalCount" resultType="java.lang.Long">
		select
		count(id)
		from p_principal
		where 1=1
		<include refid="conds" />
	</select>

</mapper>