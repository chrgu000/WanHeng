<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--@author yubangqiong  --> 
<mapper namespace="com.cgwas.schedule.dao">
	<sql id="columnsAs">
		t1.id, t1.trade_record_id, t1.create_time
	</sql>

	<select id="selectSchedulePage" resultType="com.cgwas.schedule.entity.ScheduleVo">
		select
		<include refid="columnsAs"/>
		from
		u_schedule t1
		join
		(SELECT
		id
		from
		u_schedule
		where 1=1
		
		<include refid="conds" />
		order by id desc
		limit #{firstrownum}, #{limit}) t2
		where t1.id = t2.id
	</select>
	
	<select id="selectScheduleCount" resultType="java.lang.Long">
		select
		count(id)
		from u_schedule
		where 1=1
		<include refid="conds" />
	</select>

</mapper>