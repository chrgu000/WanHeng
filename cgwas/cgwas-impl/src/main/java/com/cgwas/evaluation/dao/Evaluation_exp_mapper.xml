<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cgwas.evaluation.dao">
	<sql id="columnsAs">
		t1.id, t1.content, t1.evaluation_num
	</sql>

	<select id="selectEvaluationPage" resultType="com.cgwas.evaluation.entity.EvaluationVo">
		select
		<include refid="columnsAs"/>
		from
		p_evaluation t1
		join
		(SELECT
		id
		from
		p_evaluation
		where 1=1
		
		<include refid="conds" />
		order by id desc
		limit #{firstrownum}, #{limit}) t2
		where t1.id = t2.id
	</select>
	
	<select id="selectEvaluationCount" resultType="java.lang.Long">
		select
		count(id)
		from p_evaluation
		where 1=1
		<include refid="conds" />
	</select>

</mapper>