<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- @author yangjun-->
<mapper namespace="com.cgwas.projectSearch.dao">
	<sql id="columnsAs">
		t1.id, t1.content, t1.field, t1.sort, t1.search
	</sql>

	<select id="selectProjectSearchPage" resultType="com.cgwas.projectSearch.entity.ProjectSearchVo">
		select
		<include refid="columnsAs"/>
		from
		p_project_search t1
		join
		(SELECT
		id
		from
		p_project_search
		where 1=1
		
		<include refid="conds" />
		order by id desc
		limit #{firstrownum}, #{limit}) t2
		where t1.id = t2.id
	</select>
	
	<select id="selectProjectSearchCount" resultType="java.lang.Long">
		select
		count(id)
		from p_project_search
		where 1=1
		<include refid="conds" />
	</select>

</mapper>