<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yingtong.dao.EnterpriseDao">
	<select id="findEnterpriseById" resultType="Enterprise">
		select * from
		yt_enterprise where id=#{id}
	</select>
	<select id="findAllEnterpriseByPage" resultType="Enterprise">
		select * from yt_enterprise
		<where>
			<if test="account!=null&amp;&amp;!account.equals('')">
				and account like "%"#{account}"%"
			</if>
			<if test="name!=null&amp;&amp;!name.equals('')">
				and name like "%"#{name}"%"
			</if>
			<if test="relation_person!=null&amp;&amp;!relation_person.equals('')">
				and relation_person like "%"#{relation_person}"%"
			</if>
		</where>
		order by apply_time desc
		limit #{begin},#{pageSize}
	</select>
	<select id="findRows" resultType="int">
		select count(*) from yt_enterprise
		<where>
			<if test="account!=null&amp;&amp;!account.equals('')">
				and account like "%"#{account}"%"
			</if>
			<if test="name!=null&amp;&amp;!name.equals('')">
				and name like "%"#{name}"%"
			</if>
			<if test="relation_person!=null&amp;&amp;!relation_person.equals('')">
				and relation_person like "%"#{relation_person}"%"
			</if>
		</where>
	</select>
	<select id="findAllEnterprises" resultType="Enterprise">
		select * from yt_enterprise
	</select>
	<insert id="addEnterprise">
		insert into
		yt_enterprise(account,name,address,relation_person,tel,email,apply_time)
		values(#{account},#{name},#{address},#{relation_person},#{tel},#{email},#{apply_time})
	</insert>
	<update id="updateEnterprise">
		update yt_enterprise
		<set>
			<if test="account!=null&amp;&amp;!account.eqauls('')">
				account=#{account},
			</if>
			<if test="name!=null&amp;&amp;!name.eqauls('')">
				name=#{name},
			</if>
			<if test="address!=null&amp;&amp;!address.eqauls('')">
				address=#{address},
			</if>
			<if test="relation_person!=null&amp;&amp;!relation_person.eqauls('')">
				relation_person=#{relation_person},
			</if>
			<if test="tel!=null&amp;&amp;!tel.eqauls('')">
				tel=#{tel},
			</if>
			<if test="email!=null&amp;&amp;!email.eqauls('')">
				email=#{email},
			</if>
		</set>
		where id=#{id}
	</update>
	<delete id="deleteEnterpriseById">
		delete from yt_enterprise where id=#{id}
	</delete>
</mapper>